<%= command -%>
<% if prefer_source %> --prefer-source<% end -%>
<% if prefer_dist %> --prefer-dist<% end -%>
<% if no_custom_installers %> --no-custom-installers<% end -%>
<% if no_scripts %> --no-scripts<% end -%>
<% if no_interaction %> --no-interaction<% end -%>
<% if dev %> --dev<% end -%>
<% if verbose %> -v<% end -%>
<% if dry_run %>--dry-run<% end -%>
<% if cmd == 'update' -%>
    <%- if packages -%>
        <%- packages.each do |package| -%>
            <%= ' ' + package -%>
        <%- end -%>
    <%- end -%>
<% end -%>

